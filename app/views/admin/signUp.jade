doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        title #{title}
        meta(name="description", content="BandPad Administrator")
        meta(name='viewport', content='width=device-width, initial-scale=1.0')

        link(rel='stylesheet', type='text/css', href='/admin/lib/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', type='text/css', href='/admin/weblib/bootstrap-flatly/flatly.css')
        link(rel='stylesheet', type='text/css', href='/admin/admin/css/style.css')

    body
        include admin_menu
        .container
            include admin_message
            .row.col-lg-8.col-lg-offset-2.well
                form.signup.form-horizontal(action="/admin/postSignUp", method="post")
                    legend Administrtaor sign up
                    .form-group
                        label.col-lg-4.control-label(for='name') Full name
                        .col-lg-6
                            input.form-control(type='text', name="name", placeholder='Full name')
                    .form-group
                        label.col-lg-4.control-label(for='email') Email
                        .col-lg-6
                            input.form-control(type='text', name="email", placeholder='Email')
                    .form-group
                        label.col-lg-4.control-label(for='username') Username
                        .col-lg-6
                            input.form-control(type='text', name="username", placeholder='Username')
                    .form-group
                        label.col-lg-4.control-label(for='password') Password
                        .col-lg-6
                            input.form-control(type='password', name="password", placeholder='Password')
                    .form-group
                        label.col-lg-4.control-label(for='language') Language Code
                        .col-lg-6
                            input.form-control(type='text', name="language", placeholder='Language Code (en,he..)')
                    .form-group
                        label.col-lg-4.control-label(for='text') Magic Word
                        .col-lg-6
                            input.form-control(type='text', name='magicword')
                    .form-group
                        button.btn.btn-default.center-block(type='submit') Sign up
                        input(type='hidden',name='profile',value='admin')

    script(type='text/javascript', src='/admin/lib/jquery/dist/jquery.js')
    script(type='text/javascript', src='/admin/lib/bootstrap/dist/js/bootstrap.js')
